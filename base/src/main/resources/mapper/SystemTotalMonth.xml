<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.youzi.balance.base.mapper.impl.SystemTotalMonthMapper">
    <sql id="all_columns">
        *
    </sql>
    <sql id="tableName">
        t_system_total_month
    </sql>
    <select id="queryCount" resultType="java.lang.Integer">
        <!-- 具体的sql -->
        SELECT count(1) FROM
        <include refid="tableName"/>
        where systemId = #{systemId}
        and month = #{month}

    </select>


    <insert id="insert" parameterType="com.youzi.balance.base.po.SystemTotalMonthPo">
        insert into
        <include refid="tableName"/>
        (
        systemId,
        money,
        month,
        year
        )
        VALUES
        (
        #{systemId},
        #{money},
        #{month},
        #{year}
        )
    </insert>

    <update id="update" parameterType="com.youzi.balance.base.po.SystemTotalMonthPo">
        update
        <include refid="tableName"/>
        set money = #{money} where systemId = #{systemId}
        and month = #{month}
    </update>

</mapper>